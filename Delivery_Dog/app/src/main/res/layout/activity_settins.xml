<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.microsoft.Deliver.SettinsActivity">

<include
    layout="@layout/custom_toolbar">

</include>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_profile_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="148dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/profile_image_change_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_profile_image"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="168dp"
        android:layout_marginRight="10dp"
        android:text="Change Profile"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/settings_phone_number"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image_change_btn"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="63dp"
        android:hint="phone number..."
        android:padding="10dp"
        android:textColorHint="#989A9C" />

    <EditText
        android:id="@+id/settings_full_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_phone_number"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="61dp"
        android:hint="Full Name..."
        android:padding="10dp"
        android:textColorHint="#989B9E" />

    <EditText
        android:id="@+id/settings_address"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_full_name"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="15dp"
        android:hint="Address..."
        android:padding="10dp"
        android:textColorHint="#8C9297" />

    <TextView
        android:id="@+id/update_account_settings_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/settings_address"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:text="Update"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/close"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/settings_address"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:text="Close"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />
</RelativeLayout>