<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/number_btn"
        android:layout_width="181dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="35dp"
        android:elevation="5dp"
        app:backGroundColor="#c7d8e1"
        app:finalNumber="10"
        app:initialNumber="1"
        app:textColor="@color/colorOnSecondary"
        app:textSize="13sp">

    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/total_price5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/divider"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:text="Delivering at:"
            android:textAlignment="center"
            android:textColor="@color/colorOnSecondary"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/address1"
            app:layout_constraintEnd_toStartOf="@+id/changeaddress"
            app:layout_constraintHorizontal_bias="0.098"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/divider"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:text="jangaon"
            android:textAlignment="center"
            android:textColor="#233BBD"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/userphn"
            app:layout_constraintHorizontal_bias="0.095"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/changeaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/divider"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:text="change address"
            android:textAlignment="center"
            android:textColor="#7A0707"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/userphn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8" />

        <TextView
            android:id="@+id/userphn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="72dp"
            android:text="8542945672"
            android:textAlignment="center"
            android:textColor="#073581"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.949"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:layout_above="@+id/next_btn"
            android:layout_alignParentStart="true"
            android:background="#0B0B0C"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="99dp" />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/input_design1"
            android:text="Checkout"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            tools:layout_editor_absoluteX="278dp"
            tools:layout_editor_absoluteY="115dp" />

        <TextView
            android:id="@+id/total_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:text="Total Payable:"
            android:textAlignment="center"
            android:textColor="@color/colorOnSecondary"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/total_price2"
            app:layout_constraintEnd_toStartOf="@+id/next_btn"
            app:layout_constraintHorizontal_bias="0.104"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address1"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/total_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:text="You Save::"
            android:textAlignment="center"
            android:textColor="@color/colorOnSecondary"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/next_btn"
            app:layout_constraintHorizontal_bias="0.112"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/total_price"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="16dp"
            android:text="$0"
            android:textAlignment="center"
            android:textColor="#062E71"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/next_btn"
            app:layout_constraintHorizontal_bias="0.095"
            app:layout_constraintStart_toEndOf="@+id/total_price1"
            app:layout_constraintTop_toTopOf="@+id/divider1"
            app:layout_constraintVertical_bias="0.714" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>